{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "regions": ["gru1"],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/main" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "functions": {
    "api/main.js": {
      "runtime": "@vercel/node@3.0.0",
      "includeFiles": "api/**"
    },
    "api/test-db.js": {
      "runtime": "@vercel/node@3.0.0"
    },
    "api/cattle-purchases.js": {
      "runtime": "@vercel/node@3.0.0"
    },
    "api/expenses.js": {
      "runtime": "@vercel/node@3.0.0"
    },
    "api/revenues.js": {
      "runtime": "@vercel/node@3.0.0"
    }
  }
}