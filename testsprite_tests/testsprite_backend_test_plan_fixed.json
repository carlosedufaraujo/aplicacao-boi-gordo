  {
    "id": "TC001",
    "title": "Authentication API Tests",
    "description": "Test authentication endpoints with correct URLs and JWT token validation",
    "baseUrl": "http://localhost:3001/api/v1",
    "tests": [
      {
        "name": "Login with valid credentials",
        "method": "POST",
        "endpoint": "/auth/login",
        "body": {
          "email": "carlosedufaraujo@outlook.com",
          "password": "368308450Ce*"
        },
        "expectedStatus": 200,
        "expectedFields": ["token", "user"]
      },
      {
        "name": "Login with invalid credentials",
        "method": "POST",
        "endpoint": "/auth/login",
        "body": {
          "email": "invalid@test.com",
          "password": "wrongpassword"
        },
        "expectedStatus": 401
      },
      {
        "name": "Validate JWT token",
        "method": "POST",
        "endpoint": "/auth/validate-token",
        "body": {
          "token": "{{JWT_TOKEN}}"
        },
        "expectedStatus": 200,
        "requiresAuth": false
      }
    ]
  },
